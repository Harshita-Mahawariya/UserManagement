
<center>  
  <h2><%= link_to "User new", new_user_path%></h2>
  <h2>USER TABLE</h2>
  <table style="border-spacing: 20px 10px;">
    <% @users.each do |user| %>
      <% if user.present? %>
        <tr>
          <th>Name</th>
          <th>Edit</th>
          <th>Show</th>
          <th>destroy</th>
        </tr>
        <tr>
          <td><%= user.name %></td>
          <td><%= link_to "User edit", edit_user_path(user.id)%></td>
          <td><%= link_to "User show", user_path(user.id)%></td>
          <td><%= link_to "User destroy", user_path(user), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this user?" } %></td>

        </tr>
      <% else %>
        <%= "User not found" %>
      <% end %>
    <% end %>
  </table>
  <br>
  <br>
</center>